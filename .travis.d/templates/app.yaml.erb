apiVersion: v1
kind: Service
metadata:
  labels:
    name: <%= app[:name] %>
  name: <%= app[:name] %>
spec:
  ports:
    -
      name: http
      port: <%= app[:port] or 80 %>
      protocol: TCP
      targetPort: <%= app[:target_port] or 3000 %>
  selector:
    name: <%= app[:name] %>
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: <%= app[:name] %>
spec:
  replicas: 1
  template:
    metadata:
      name: <%= app[:name] %>
      labels:
        name: <%= app[:name] %>
    spec:
        containers:
          - image: <%= app[:image] %>:<%= app[:tag] %>
            name: <%= app[:name] %>
            env:
              - name: PORT
                value: <%= app[:target_port] or 3000 %>
              - name: SOURCE_REV
                value: <%= app[:git_rev] %>
              <% if app[:special][:mongo] %>
              - name: MONGO_URL
                value: mongodb://<%= dome[:mongo] %>/<%= app[:name] %>
              <% end %>
              <% for e in (app[:env] or []) %>
              - name: <%= e[:name] %>
                value: <%= e[:value].to_s.inspect %>
              <% end %>
            ports:
              - containerPort: <%= app[:target_port] or 3000 %>
                name: <%= app[:name] %>

