apiVersion: v1
kind: Service
metadata:
  labels:
    name: <%= app['uid'] %>
  name: <%= app['uid'] %>
spec:
  ports:
    -
      name: http
      port: <%= app['port'] or 80 %>
      protocol: TCP
      targetPort: <%= app['target_port'] or 3000 %>
  selector:
    name: <%= app['uid'] %>
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
    name: <%= app['uid'] %>
spec:
  replicas: <%= (app['deployment'] and app['deployment']['replicas']) or 1 %>
  template:
    metadata:
      name: <%= app['uid'] %>
      labels:
        name: <%= app['uid'] %>
    spec:
        containers:
          - image: <%= app['git']['user'] %>/<%= app['git']['shortname'] %>:<%= app['git']['rev'] %>
            name: <%= app['uid'] %>
            env:
              - name: PORT
                value: <%= app['target_port'] or 3000 %>
              - name: SOURCE_REV
                value: <%= app['git']['rev'] %>
              <% if app['wants'] && app['wants']['mongo'] %>
              - name: MONGO_URL
                value: mongodb://<%= biodome['mongo'] %>/<%= app['uid'] %>
              <% end %>
              <% app['env']&.each do |name, value| %>
              - name: <%= name %>
                value: <%= value.to_s.inspect %>
              <% end %>
              <% app['secrets']&.each do |name| %>
              - name: <%= name %>
                value: <%= ENV[name].to_s.inspect %>
              <% end %>
            ports:
              - containerPort: <%= app['target_port'] or 3000 %>
                name: <%= app['uid'] %>

