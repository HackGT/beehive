apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: app-ingress
spec:
  rules:
  <% biodomes.each do |biodome_name, biodome| %>
  <% biodome.each do |app_name, app| %>
  <% if biodome_name == "default" %>
  - host: <%= app_name %>.hack.gt
  <% else %>
  - host: <%= app_name %>.<%= biodome_name %>.hack.gt
  <% end %>
    http:
      paths:
      - backend:
          serviceName: <%= app_name %>
          servicePort: 80
  <% end %>
  <% end %>
